@model DapperProject.Dtos.TagDtos.CreateTagDto
@{
    ViewData["Title"] = "CreateTag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Etiket Ekle</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div class="container">
                                <br /><br />

                                <label>Temsilci Adı</label>
                                <input type="text" asp-for="TagName" class="form-control" />
                                <br />
                                <button type="submit" class="btn btn-primary">Etiketi Ekle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>