@model List<DapperProject.Dtos.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Referanslar Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Adı/Soyadı </th>
                            <th scope="col">Unvan </th>
                            <th scope="col">Açıklaması </th>
                            <th scope="col">Görsel </th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.NameSurname
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <img src="@item.ImageUrl" width="100" height="100" />
                                </td>
                                <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Referans Girişi</a></td>
    </div>
</div>